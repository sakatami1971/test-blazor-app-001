
@page "/nippouinputdialog"
@using MatBlazor
@namespace NippouInputDialog
<MatDialog @bind-IsOpen="@IsDialogOpen" CanBeClosed="false">
    <MatDialogTitle>@Title</MatDialogTitle>
    <MatDialogContent>
        <p>
            <MatTextField type="text" label="運行年月From" @bind-Value="OperationYYYYMMFrom"/>
            <b>～</b>
            <MatTextField type="text" label="運行年月To" @bind-Value="OperationYYYYMMTo"/>
        </p>
        <p>
            <MatSelectItem ReadOnly="true" label="乗務員No." @bind-Value="AssetCrewNo" Items=@CrewNoList>
            </MatSelectItem>
            <MatStringField ReadOnly="true" Label="乗務員名" @bind-Value="CrewName"></MatStringField>
        </p>
        <p>
            <MatTextField type="number" label="運行日From" @bind-Value="WorkingDayFrom" />
            <b>～</b>
            <MatTextField type="number" label="運行日To" @bind-Value="WorkingDayTo" />
        </p>
        <p>
            <MatTextField type="number" label="走行Km From" @bind-Value="MileageFrom" />
            <b>～</b>
            <MatTextField type="number" label="走行Km " @bind-Value="MileageTo" />
        </p>
        <p>
            <MatTextField type="number" label="例外勤務" @bind-Value="ExceptionalWork" />
        </p>
    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="@(e => { OnClick(true); })">OK</MatButton>
        <MatButton OnClick="@(e => { OnClick(false); })">Cancel</MatButton>
    </MatDialogActions>
</MatDialog>
@code {

    [Parameter]
    public bool IsDialogOpen { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public string Values { get; set; }

    private int OperationYYYYMMFrom;
    private int OperationYYYYMMTo;
    private int WorkingDayFrom;
    private int WorkingDayTo;
    private int MileageFrom;
    private int MileageTo;
    private int ExceptionalWork;
    private String CrewName;

    private String[] CrewNoList = new []
    {
        new string("2000"),
        new string("2001"), 
        new string("2002"), 
        new string("2003"), 
    };
    private string AssetCrewNo;

    [Parameter]
    public EventCallback<bool> ButtonAction { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(100);
    }

    void OnClick(bool result)
    {
        ButtonAction.InvokeAsync(result);
    }
 }
 

